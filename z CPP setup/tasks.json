{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile and run C++ with input/output (MSYS2-safe)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "g++ -std=c++17 -o \"${fileDirname}/${fileBasenameNoExtension}.exe\" \"${file}\" && \"${fileDirname}/${fileBasenameNoExtension}.exe\" < \"${fileDirname}/input.txt\" > \"${fileDirname}/output.txt\""
      ],
      "options": {
        "shell": {
          "executable": "cmd.exe"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
